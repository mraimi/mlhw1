function [X,Y] = hw1_data(n)
load('mnist.mat');
colormap(1-gray);
imagesc(reshape(data(3,:),28,28)');

rng('shuffle');
Y = randsample([0;1;2],n,1);
X = zeros(n,2);
means = [0,0; 2,0; 0,2];
stddevs = [1, 1/2, 1];
for k=1:3
	m = sum(Y==mod(k,3));
	X(Y==mod(k,3),:) = bsxfun(@plus,stddevs(k)*randn(m,2),means(k,:));
end
end

function params = hw1 train1a(X,Y)

pi = zeros(10,3);
for q=1:60000
    pi[Y[q], 1] += 1;
end
end